{
    "coc.preferences.extensionUpdateCheck": "never",
    "suggest.noselect": true,
    "suggest.enablePreselect": false,
    "snippets.snipmate.enable": true,
    "diagnostic.errorSign": "❌",
    "diagnostic.warningSign": "❗",
    "snippets.shortcut": "📜",
    "coc.source.buffer.shortcut": "📗",
    "coc.source.around.shortcut": "📙",
    "coc.source.file.shortcut": "📁",
    "python.jediShortcut": "🐍",
    "languageserver": {
        "fortran": {
            "command": "~/.local/bin/fortls",
            "args": ["--lowercase_intrinsics","--variable_hover"],
            "filetypes": ["fortran"],
            "rootPatterns": ["~/.local/lib/python3.8/site-packages/fortls"]
        }
    }
}
